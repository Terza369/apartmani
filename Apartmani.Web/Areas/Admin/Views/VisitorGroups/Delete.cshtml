@model Apartmani.Web.Models.VisitorGroup

@{
    ViewBag.Title = "Delete";
}

<h2>Brisanje</h2>


<div>
    <h4>@Model.Name</h4>

    <h3>Jeste li sigurni da želite ovo obrisati?</h3>

    <hr />

    @Html.Partial("_Details")

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Izbriši" class="btn btn-default" /> |
            @Html.ActionLink("Nazad na grupu", "Details", new { id = Model.Id, controller = "VisitorGroups" })
        </div>
    }
</div>
